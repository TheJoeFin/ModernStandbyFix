<Window x:Class="ModernStandbyFix.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModernStandbyFix"
        mc:Ignorable="d"
        Title="Mondern Standby Fix" Height="200" Width="350" ShowInTaskbar="False" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button x:Name="hideButton" Content="Hide window" Width="300" Height="30" Margin="0,0,0,20" FontSize="20" FontWeight="Light" Click="hideButton_Click"/>
            <CheckBox x:Name="runOnStartupCheckBox" Content="Run on startup" VerticalContentAlignment="Center" Width="300" Height="35" FontSize="20" FontWeight="Light"/>
            <TextBlock x:Name="versionTextBlock" Width="300" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Window>
